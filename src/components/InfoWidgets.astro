---
import { Image } from "astro:assets";

const socialLinks = [
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/almaalviana/",
    icon: "linkedin",
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/almaalviana18/?utm_source=ig_web_button_share_sheet",
    icon: "instagram",
  },
  { name: "Email", url: "mailto:alma.alviana@example.com", icon: "email" },
];

// Get current time in different formats
const now = new Date();
const timeString = now.toLocaleTimeString("en-US", {
  hour: "2-digit",
  minute: "2-digit",
  hour12: true,
});
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
  <!-- Location Widget -->
  <div
    class="glass glass-hover rounded-2xl p-6 animate-float"
    style="animation-delay: 0.2s;"
  >
    <div class="flex items-center gap-4">
      <div
        class="w-10 h-10 flex items-center justify-center glass-subtle rounded-full"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="w-5 h-5 text-red-400"
        >
          <path
            fill-rule="evenodd"
            d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z"
            clip-rule="evenodd"></path>
        </svg>
      </div>
      <div>
        <p class="text-sm text-gray-600 font-medium">Location</p>
        <p class="font-semibold text-gray-800">Bali, Indonesia</p>
      </div>
    </div>
  </div>

  <!-- Time Widget -->
  <div
    class="glass glass-hover rounded-2xl p-6 animate-float"
    style="animation-delay: 0.4s;"
  >
    <div class="flex items-center gap-4">
      <div
        class="w-10 h-10 flex items-center justify-center glass-subtle rounded-full"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="w-5 h-5 text-purple-400"
        >
          <path
            fill-rule="evenodd"
            d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 6a.75.75 0 00-1.5 0v6c0 .414.336.75.75.75h4.5a.75.75 0 000-1.5h-3.75V6z"
            clip-rule="evenodd"></path>
        </svg>
      </div>
      <div>
        <p class="text-sm text-gray-600 font-medium">Local Time</p>
        <p class="font-semibold text-gray-800">WITA â€¢ {timeString}</p>
      </div>
    </div>
  </div>

  <!-- Availability Widget -->
  <div
    class="glass glass-hover rounded-2xl p-6 animate-float"
    style="animation-delay: 0.6s;"
  >
    <div class="flex items-center gap-4">
      <div
        class="w-10 h-10 flex items-center justify-center glass-subtle rounded-full"
      >
        <div class="w-4 h-4 bg-green-400 rounded-full animate-pulse"></div>
      </div>
      <div>
        <p class="text-sm text-gray-600 font-medium">Availability</p>
        <p class="font-semibold text-gray-800">Available for hire</p>
      </div>
    </div>
  </div>

  <!-- Social Links Widget -->
  <div
    class="glass glass-hover rounded-2xl p-6 animate-float"
    style="animation-delay: 0.8s;"
  >
    <div class="flex items-center gap-4">
      <div
        class="w-10 h-10 flex items-center justify-center glass-subtle rounded-full"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="w-5 h-5 text-blue-400"
        >
          <path
            fill-rule="evenodd"
            d="M8.25 6.75a3.75 3.75 0 117.5 0 3.75 3.75 0 01-7.5 0zM15.75 9.75a3 3 0 116 0 3 3 0 01-6 0zM2.25 9.75a3 3 0 116 0 3 3 0 01-6 0zM6.31 15.117A6.745 6.745 0 0112 12a6.745 6.745 0 016.709 7.498.75.75 0 01-.372.568A12.696 12.696 0 0112 21.75c-2.305 0-4.47-.612-6.337-1.684a.75.75 0 01-.372-.568 6.745 6.745 0 011.019-4.381z"
            clip-rule="evenodd"></path>
          <path
            d="M5.082 14.254a8.287 8.287 0 00-1.308 5.135 9.687 9.687 0 01-1.764-.44l-.115-.04a.563.563 0 01-.373-.487l-.01-.121a3.75 3.75 0 013.57-4.047zM20.226 19.389a8.287 8.287 0 00-1.308-5.135 3.75 3.75 0 013.57 4.047l-.01.121a.563.563 0 01-.373.486l-.115.04c-.567.2-1.156.349-1.764.441z"
          ></path>
        </svg>
      </div>
      <div class="flex-col gap-2">
        <p class="text-sm text-gray-600 font-medium">Social Media</p>
        <div class="flex gap-3 font-medium">
          {
            socialLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-700 hover:text-gray-900 transition-colors hover:scale-110 transform duration-200"
              >
                <span class="sr-only">{link.name}</span>
                {link.icon === "instagram" && (
                  <svg
                    class="w-5 h-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                  </svg>
                )}
                {link.icon === "linkedin" && (
                  <svg
                    class="w-5 h-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                      clip-rule="evenodd"
                    />
                  </svg>
                )}
                {link.icon === "email" && (
                  <svg
                    class="w-5 h-5"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                    <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
                  </svg>
                )}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>

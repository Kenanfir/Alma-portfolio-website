---
import { projects } from "../data/project";
import type { Project } from "../types/project";

const featuredProjects: Project[] = projects;
---

<div class="glass-strong glass-hover rounded-3xl p-8 shadow-xl animate-float">
  <div class="md:flex justify-between items-center mb-6">
    <h3 class="text-2xl font-semibold text-gray-800">iOS App Projects</h3>
    <a
      href="/projects"
      class="text-gray-700 hover:text-gray-900 transition-colors text-sm glass-subtle px-4 py-2 rounded-full"
    >
      View all projects â†’
    </a>
  </div>
  <div class="grid gap-6">
    {
      featuredProjects.map((project, index) => (
        <a
          href={project.demoUrl}
          class="block glass glass-hover p-6 rounded-2xl transition-all duration-300 hover:scale-[1.02]"
          style={`animation-delay: ${index * 0.2}s;`}
        >
          <div class="flex flex-col sm:flex-row gap-4 sm:gap-6">
            {project.image && (
              <img
                src={project.image}
                alt={project.title}
                class="w-full sm:w-24 h-48 sm:h-24 rounded-xl object-cover glass-subtle"
              />
            )}
            <div class="flex-1">
              <h4 class="text-xl font-medium text-gray-800 mb-2">
                {project.title}
              </h4>
              <p class="text-gray-600 mb-3">{project.description}</p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map((tech) => (
                  <span class="px-3 py-1 glass-subtle text-gray-700 rounded-full text-sm border border-gray-300">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </a>
      ))
    }
  </div>
</div>

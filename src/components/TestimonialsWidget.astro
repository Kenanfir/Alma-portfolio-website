---
interface Testimonial {
  content: string;
  author: string;
  role: string;
  company: string;
  avatar: string;
}

const testimonials: Testimonial[] = [
  {
    content:
      "Alma memiliki jiwa yang mau terus belajar dan tipe lead yang berani menerima challenge di setiap kondisi terendah di dalam team. Its so amazing for me, bahkan saat divisi yang dia pegang hrs berubah fokus, dia bisa beradaptasi dgn hal itu.",
    author: "Zulfa Fauziah",
    role: "Manager",
    company: "Female In Action",
    avatar:
      "https://media.licdn.com/dms/image/v2/C5603AQGB8En_mdVZFA/profile-displayphoto-shrink_400_400/profile-displayphoto-shrink_400_400/0/1632829171330?e=1761177600&v=beta&t=VvwfS8cuLE_0yS27gSicriaMvIadHASUt-p264tSeiY",
  },
];
---

<div class="glass-strong glass-hover rounded-3xl p-8 shadow-xl animate-float">
  <h3 class="text-2xl font-semibold text-gray-800 mb-6">What People Say</h3>
  <div class="grid md:grid-cols-2 gap-6">
    {
      testimonials.map((testimonial, index) => (
        <div
          class="glass glass-hover p-6 rounded-2xl transition-all duration-300 hover:scale-[1.02]"
          style={`animation-delay: ${index * 0.3}s;`}
        >
          <div class="flex gap-4 items-start">
            <img
              src={testimonial.avatar}
              alt={testimonial.author}
              class="w-12 h-12 rounded-full object-cover glass-subtle border border-gray-300"
            />
            <div class="flex-1">
              <p class="text-gray-700 mb-4 leading-relaxed">
                "{testimonial.content}"
              </p>
              <div>
                <p class="font-medium text-gray-800">{testimonial.author}</p>
                <p class="text-sm text-gray-600">
                  {testimonial.role} at {testimonial.company}
                </p>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
